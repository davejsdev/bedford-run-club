---
import Image from "astro/components/Image.astro"
import stravaLogo from "../../assets/strava-logo.svg"
import instagramLogo from "../../assets/instagram-logo.svg"
---

<footer>
	<p>Bedford Run Club. Halifax, Nova Scotia</p>
	<ul class="list">
		<li>
			<a href="">
				<Image class="icon" src={stravaLogo} alt="Strava" />
			</a>
		</li>
		<li>
			<a href="">
				<Image class="icon" src={instagramLogo} alt="Instagram" />
			</a>
		</li>
	</ul>
</footer>

<style>
	footer {
		/* background-color: var(--primary-color); */
		/* color: white; */
		background-color: #f8f8f8;
		padding: 2rem 1rem;
		font-size: 0.8rem;
	}

	.list {
		list-style: none;
		margin: 0;
		padding: 0;
		display: flex;
		justify-content: start;
	}

	.icon {
		height: 1.5rem;
		width: auto;
		margin: 0 0.5rem;
		filter: grayscale(100%) brightness(0) opacity(0.5);
		
	}
</style>